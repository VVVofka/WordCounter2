<Window x:Class="DataApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">

    <Grid>
        <Grid x:Name="layoutGrid">
            <Button x:Name="phoneButton" Width="250" Height="40" HorizontalAlignment="Center">
                <Button.Content>
                    <local:MainWindow Name="Lumia 950" Price="700" />
                </Button.Content>
            </Button>
        </Grid>
        
        <StackPanel Margin="25">
            <TextBlock FontSize="16" Text="=Title" HorizontalAlignment="Left" MinWidth="99" MinHeight="10" Width="74" VerticalAlignment="Top" />
            <TextBlock FontSize="16" Text="=Company" HorizontalAlignment="Right" Width="140" VerticalAlignment="Top" />
        </StackPanel>
    </Grid>
</Window>