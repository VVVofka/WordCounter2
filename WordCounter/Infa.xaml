<Window x:Class="WordCounter.Infa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordCounter"
        mc:Ignorable="d"
        Title="Infa" Height="450" Width="1000">
    <Grid Margin="0,0,0,0" MinWidth="1000" MinHeight="900" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition  Height="60"></RowDefinition>
            <RowDefinition  Height="*" MinHeight="900"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListBox Name="List" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Height="Auto" Margin="0,0,0,0" VerticalAlignment="Top" Background="#FFBF8A8A"/>
        <WebBrowser Name="webBrowser1" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="Auto" MinWidth="50" MinHeight="50"/>

    </Grid>
</Window>
